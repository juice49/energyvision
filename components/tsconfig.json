{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "./dist/types",
    "outDir": "./dist",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@components": ["src", "src/*"],
      "@utils": ["utils", "utils/*"],
      "@mockdata": ["stories/mockdata", "stories/mockdata/*"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "**/*.stories.*"]
}
